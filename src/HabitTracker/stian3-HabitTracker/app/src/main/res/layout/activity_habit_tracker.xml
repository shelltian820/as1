<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.stian3_habittracker.habitTrackerActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/currentDate"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Today&apos;s Habits"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Click a habit to complete it."
            android:id="@+id/textView7"
            android:textAlignment="center" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="258dp"
            android:id="@+id/oldHabitsList"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.02" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add New Habit"
            android:id="@+id/newHabitButton"
            android:onClick="newHabit" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View All Habits"
            android:id="@+id/viewAllButton"
            android:onClick="viewAll" />

    </LinearLayout>
</RelativeLayout>
